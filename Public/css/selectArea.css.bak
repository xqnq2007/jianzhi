}
.item_list {
display: none;
position: absolute;
top: 28px;
left: -1px;
overflow: hidden;
background: #fff;
border: 1px solid #dfdfdf;
width: 120px;
margin: 0;
height: auto;
list-style:none;
padding:0;
}
.item_list span {
display: block;
text-indent: 12px;
text-decoration: none;
color: #000;
width: 120px;
font-size: 14px;
font-family: "宋体";
cursor: pointer;
}
.item_list span:hover {
background-color: #f5f5f5;
}
.item_list li {
margin: 0;
height: 32px;
line-height: 32px;
text-align: left;
float:left;
}
