height: 28px;
vertical-align: middle;

border: 1px solid #A9A9A9;
width:120px;
margin-top:11px;
margin-right:10px;
background:#FFF url(../images/triangle.png) no-repeat 86px -2px;

}

.select_item {
display: inline;
float:left;
height: 28px;
line-height: 28px;
overflow: hidden;
padding: 0 0 0 0px;
white-space: nowrap;
cursor: pointer;
color: #333;
width: 120px;
text-align: left;
font-weight: normal;
font-size: 14px;
font-family: "宋体";
